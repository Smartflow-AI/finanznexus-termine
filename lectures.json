// Types for lecture data
export interface Lecture {
  id: string;
  title: string;
  date: string; // Format: YYYY-MM-DD
  time: string; // Format: HH:MM
  endTime: string; // Format: HH:MM
  location: {
    name?: string;
    street: string;
    houseNumber: string;
    zipCode: string;
    city: string;
    state: string;
  };
}

